<% layout("layouts/boilerplate") %>

<div class="row justify-content-center mt-4">
  <div class="col-md-7">

    <h2 class="mb-3"><%= listing.title %></h2>

    <div class="card border-0 shadow-sm p-3 mb-4">

      <img src="<%= listing.image %>" class="img-fluid rounded mb-3">

      <small class="text-muted">Hosted by <%= listing.owner.username %></small>

      <p class="text-muted mt-2"><%= listing.description %></p>

      <h6>₹ <%= listing.price.toLocaleString("en-IN") %></h6>

      <p><strong><%= listing.location %></strong></p>
      <p class="text-muted"><%= listing.country %></p>

      <% if (currentUser && listing.owner._id.toString() === currentUser._id.toString()) { %>

        <div class="mt-3 d-flex gap-2">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

    </div>

    <div class="review-section">

      <% if (currentUser) { %>
        <h4>Leave a Review</h4>

        <form method="POST" action="/listings/<%= listing._id %>/reviews" class="mb-4">

          <div class="mb-3">
            <label>Rating</label>
            <input type="range" min="1" max="5" name="review[rating]" class="form-range" required>
          </div>

          <div class="mb-3">
            <label>Comment</label>
            <textarea class="form-control" name="review[comment]" rows="3" required></textarea>
          </div>

          <button class="btn btn-dark">Submit</button>
        </form>
      <% } %>

      <h4>All Reviews</h4>

      <% if (listing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet.</p>
      <% } %>

      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-md-6 mb-4">

            <div class="card shadow-sm border-0 p-3">

              <div class="d-flex justify-content-between mb-2">
                <span class="badge bg-dark px-3 py-2">
                  <%= review.rating %> ⭐ 
                  <%= review.author ? review.author.username : "Anonymous" %>
                </span>

                <small class="text-muted">
                  <%= new Date(review.createdAt).toLocaleDateString() %>
                </small>
              </div>

              <p><%= review.comment %></p>

              <% if (currentUser && review.author && review.author._id.toString() === currentUser._id.toString()) { %>

                <form method="POST"
                      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                      class="text-end">
                  <button class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              <% } %>

            </div>
          </div>
        <% } %>
      </div>

    </div>

  </div>
</div>
